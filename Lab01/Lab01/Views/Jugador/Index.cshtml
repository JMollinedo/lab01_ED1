
@{
    ViewBag.Title = "Index";
}

@model IEnumerable<Lab01.Models.Jugador>

@*@{
        ViewBag.Title = "Index";
    }
*@
<h2>Lista Jugadores</h2>
<p>
    @Html.ActionLink("Crear Jugador", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Club)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Club)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.JugadorID }) |
                @Html.ActionLink("Details", "Details", new { id = item.JugadorID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.JugadorID })
            </td>
        </tr>
    }


</table>


